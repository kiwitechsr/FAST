<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dark" parent="@android:style/Theme">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="light" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="transparent_dark" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="transparent_light" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="actionbar_icon">
        <item name="android:layout_width">@dimen/actionbar_icon_size</item>
        <item name="android:layout_height">@dimen/actionbar_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:src">@drawable/ic_launcher</item>

    </style>

    <style name="Animation" parent="android:style/Animation.Activity"/>

    <!-- the animations must have been defined in your "anim" folder, of course -->
    <style name="Animation.MyAwesomeAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_up</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
